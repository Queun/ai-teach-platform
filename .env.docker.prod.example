# ==========================================
# Docker生产环境配置模板
# 请复制此文件为 .env.docker.prod 并填入真实值
# ==========================================

# === 数据库配置 ===
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=your_secure_database_password_here
DATABASE_PORT=5432

# === Strapi后端配置 ===
STRAPI_PORT=1337

# Strapi核心密钥 (请使用随机生成的值)
# 可使用命令: openssl rand -base64 32
STRAPI_APP_KEYS=your_app_keys_here_comma_separated
STRAPI_API_TOKEN_SALT=your_api_token_salt_here
STRAPI_ADMIN_JWT_SECRET=your_admin_jwt_secret_here
STRAPI_TRANSFER_TOKEN_SALT=your_transfer_token_salt_here
STRAPI_JWT_SECRET=your_jwt_secret_here
STRAPI_ENCRYPTION_KEY=your_encryption_key_here

# === Next.js前端配置 ===
FRONTEND_PORT=3000

# 前端访问后端的URL (生产环境应该是内部网络地址)
NEXT_PUBLIC_STRAPI_URL=http://backend:1337/api

# Strapi API Token (客户端只读权限)
NEXT_PUBLIC_STRAPI_TOKEN=your_readonly_token_here

# Strapi API Token (服务端全权限 - 仅服务端使用)
STRAPI_API_TOKEN=your_full_access_token_here

# === 外部服务URL配置 ===
# 如果你的服务部署在不同域名下，请更新这些URL
PUBLIC_FRONTEND_URL=https://your-domain.com
PUBLIC_BACKEND_URL=https://api.your-domain.com

# === SSL/TLS配置 (如果使用Nginx) ===
SSL_CERT_PATH=/path/to/your/cert.pem
SSL_KEY_PATH=/path/to/your/private.key

# === 备份配置 ===
BACKUP_SCHEDULE="0 2 * * *"  # 每天凌晨2点备份
BACKUP_RETENTION_DAYS=7